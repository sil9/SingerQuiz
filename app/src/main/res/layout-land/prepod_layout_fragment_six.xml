<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewQestionNumber"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        tools:text="Number"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        android:layout_marginBottom="4dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="296dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3375"
        tools:layout_editor_absoluteY="147dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.525"
        tools:layout_editor_absoluteY="229dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7125"
        tools:layout_editor_absoluteY="311dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        tools:layout_editor_absoluteY="393dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn1"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        tools:text="btn1"/>

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        tools:text="btn2"/>

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        tools:text="btn3"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginTop="4dp" />

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        tools:text="btn4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AnswerTextView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="Answer"/>
</android.support.constraint.ConstraintLayout>